---
layout: null
sitemap: false
---
<!-- DEBUG: site.url = {{ site.url }} -->
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">

    {% assign treatments_es = site.tratamientos-faciales_es | concat: site.tratamientos-corporales_es | concat: site.tratamientos-intimos_es %}
    {% assign treatments_en = site.tratamientos-faciales_en | concat: site.tratamientos-corporales_en | concat: site.tratamientos-intimos_en %}
    
    {% for treatment in treatments_es %}
    <url>
        <loc>{{ site.url }}{{ treatment.url }}</loc>
        
        {% assign en_version = treatments_en | where: "ref", treatment.ref | first %}
        {% if en_version %}
        <xhtml:link 
            rel="alternate"
            hreflang="en"
            href="{{ site.url }}{{ en_version.url }}"
        />
        <xhtml:link 
            rel="alternate"
            hreflang="es"
            href="{{ site.url }}{{ treatment.url }}"
        />
        {% endif %}
        
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
    </url>
    {% endfor %}

    {% for treatment in treatments_en %}
    <url>
        <loc>{{ site.url }}{{ treatment.url }}</loc>
        
        {% assign es_version = treatments_es | where: "ref", treatment.ref | first %}
        {% if es_version %}
        <xhtml:link 
            rel="alternate"
            hreflang="es"
            href="{{ site.url }}{{ es_version.url }}"
        />
        <xhtml:link 
            rel="alternate"
            hreflang="en"
            href="{{ site.url }}{{ treatment.url }}"
        />
        {% endif %}
        
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
    </url>
    {% endfor %}
</urlset>